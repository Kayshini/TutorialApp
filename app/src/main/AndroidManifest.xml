<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kayshini.tutorial">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.QuizActivity"
            android:label="@string/title_back_to_home"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ResultActivity"
            android:label="@string/title_back_to_home"
            android:parentActivityName=".activity.MainActivity" />
        <!-- <activity android:name=".activity.YoutubeViewerActivity" -->
        <!-- android:screenOrientation="portrait" -->
        <!-- android:theme="@android:style/Theme.Dialog"></activity> -->
        <activity android:name=".activity.YoutubeViewerActivity" />
        <activity android:name=".activity.ExploreExceptionActivity"
            android:label="@string/title_back_to_home"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.ExceptionTopicDetailsActivity"
            android:launchMode="singleTop"
            android:label="@string/title_back_to_explore"
            android:parentActivityName=".activity.ExploreExceptionActivity"/>
    </application>

</manifest>